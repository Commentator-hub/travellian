mixin content(name, des, addClass)
    if addClass
        div(class=name + '-content').position-content.content
            each dataItem in des
                h2(class=name + '-title-before-width').title-appearance=dataItem.title
                div(class=name + '-wrapper-descr-button').wrapper-descr-button
                    p(class=name + '-descr-appearance').descr-appearance=dataItem.subtitle
                    block
    else
        div(class=name + '-content').content
            each dataItem in des
                h2(class=name + '-title-before-width').title-appearance=dataItem.title
                div(class=name + '-wrapper-descr-button').wrapper-descr-button
                    p(class=name + '-descr-appearance').descr-appearance=dataItem.subtitle
                    block